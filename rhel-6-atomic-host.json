{
    "comment": "RHEL 6 Atomic Host",

    "osname": "rhel-6-atomic-host",
    "ref": "rhel-atomic-host/6/i386/standard",

    "repos": ["rhel6"],

    "selinux": true,

    "install-langs-comment": "Keep this in sync with treecompose-post.sh",
    "install-langs": [
	"pt_BR",
	"fr",
	"fr_FR",
	"de",
	"de_DE",
	"it",
	"it_IT",
	"ru",
	"ru_RU",
	"es",
	"es_ES",
	"en_US",
	"zh_CN",
	"ja",
	"ja_JP",
	"ko",
	"ko_KR",
	"zh_TW",
	"as",
	"as_IN",
	"bn",
	"bn_IN",
	"gu",
	"gu_IN",
	"hi",
	"hi_IN",
	"kn",
	"kn_IN",
	"ml",
	"ml_IN",
	"mr",
	"mr_IN",
	"or",
	"or_IN",
	"pa",
	"pa_IN",
	"ta",
	"ta_IN",
	"te",
	"te_IN"
    ],

    "documentation": false,

    "initramfs-args": ["--no-hostonly", "--add", "iscsi"],

    "mutate-os-release": "6",

    "etc-group-members": ["wheel", "docker"],

    "ignore-removed-users": ["root"],
    "ignore-removed-groups": ["root"],
    "check-passwd": { "type": "file", "filename": "passwd" },
    "check-groups": { "type": "file", "filename": "group" },

    "packages": ["glibc", "shadow-utils",
		 "kernel",
		 "dracut-network",
		 "biosdevname",
		 "coreutils",
		 "cryptsetup",
		 "lvm2",
		 "efibootmgr",
		 "e2fsprogs",
		 "mdadm",
		 "selinux-policy-targeted",
		 "sssd",
		 "tar", "xz", "gzip", "bzip2",
		 "less",
		 "kexec-tools",
		 "iscsi-initiator-utils",
		 "bridge-utils",
                 "nfs-utils",
		 "openssh-server", "openssh-clients",
		 "logrotate",
		 "passwd",
		 "NetworkManager", "vim-minimal", "nano",
		 "sudo",
		 "tuned",
		 "fuse",
		 "irqbalance",
		 "rsync",
		 "net-tools", "nmap", "nc",
		 "bind-utils",
		 "authconfig",
		 "policycoreutils-python",
		 "setools-console",
                 "device-mapper-multipath",
                 "sg3_utils",
                 "attr"
                ],

    "remove-from-packages": [["kernel", "/lib/modules/.*/drivers/gpu"],
        		     ["filesystem", "/usr/share/backgrounds"]],

    "units": [],

    "default_target": ""
}
